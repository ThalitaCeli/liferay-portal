	@priority = "4"
	test LocalizationOfRichTextPersists {
		ProductMenu.gotoPortlet(
			category = "Content & Data",
			panel = "Site Administration",
			portlet = "Documents and Media");

		DMNavigator.gotoDocumentType();

		DMDocumentType.addWithoutSave(
			dmDocumentTypeFieldNames = "Rich Text",
			dmDocumentTypeName = "Test");

		PortletEntry.changeLocale(locale = "pt_BR");

		PortletEntry.inputName(name = "Teste");

		DDLDataDefinition.save();

		DMNavigator.gotoDocumentCP(dmDocumentTitle = "Test");

		PortletEntry.changeLocale(locale = "pt_BR");

		AssertTextEquals(
			locator1 = "TextInput#NAME",
			value1 = "Teste");
	}

